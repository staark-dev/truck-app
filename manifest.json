  ],
  "categories": ["productivity", "business", "travel", "navigation"],
  "shortcuts": [
    {
      "name": "Start Program",
      "short_name": "Start",
      "description": "Pornește programul de lucru",
      "url": "/?action=start",
      "icons": [
        { "src": "icons/shortcut-start.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "Start Driving",
      "short_name": "Condus",
      "description": "Activează modul condus",
      "url": "/?action=driving",
      "icons": [
        { "src": "icons/shortcut-driving.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "Start Break",
      "short_name": "Pauză",
      "description": "Începe pauza",
      "url": "/?action=break",
      "icons": [
        { "src": "icons/shortcut-break.png", "sizes": "96x96", "type": "image/png" }
      ]
    },
    {
      "name": "View Reports",
      "short_name": "Rapoarte",
      "description": "Vizualizează rapoartele",
      "url": "/?page=reports",
      "icons": [
        { "src": "icons/shortcut-reports.png", "sizes": "96x96", "type": "image/png" }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", ".csv", "application/json", ".json"]
        }
      ]
    }
  },
  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [
    { "protocol": "web+driverapp", "url": "/?handler=%s" }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "edge_side_panel": { "preferred_width": 400 },
  "iarc_rating_id": "",
  "permissions": ["geolocation", "notifications", "persistent-storage", "background-sync"],
  "features": ["Cross Platform", "fast", "simple"]
}
